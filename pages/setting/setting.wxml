<van-transition wx:if="{{transition}}" name="slide-down" duration="400">
  <van-row>
    <van-row custom-class="top-panel">
      <!--头像位置-->
      <van-row class="info-block">
        <van-col>
          <text class="user-name"> {{userInfo.nickName}} </text>
          <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover">
          </image>
        </van-col>
      </van-row>

      <van-row class="second-block">
        <van-cell border="{{false}}" custom-class="cell-left">
          <van-icon slot="icon" name="gold-coin" size="20px" class="balance-icon" />
          <text slot="title" class="balance">余额</text>
        </van-cell>

        <van-cell border="{{false}}" custom-class="cell-right">
          <van-icon slot="icon" name="fire" size="20px" class="balance-icon" />
          <text slot="title" class="balance">进展</text>
        </van-cell>
      </van-row>
    </van-row>
  </van-row>
</van-transition>

